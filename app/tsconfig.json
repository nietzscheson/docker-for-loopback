{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES5",
    "lib": ["es2015"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "platforms"]

}
